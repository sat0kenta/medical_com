<% if current_user != user%>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationships_destroy_path(user.id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", relationships_create_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>