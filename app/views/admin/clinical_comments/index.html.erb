<table class='table table-hover table-inverse'>
    <h3>コメント一覧</h3>
    <% @comments.each do |comment|%>
      <tr>
        <td>
          <%= image_tag comment.user.get_profile_image, size:'50x50' %>
        </td>
        <td><%= comment.user.name %></td>
        <td><%= comment.comment %></td>
         <td><%= link_to 'Destroy', admin_clinical_comment_path(comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
      </tr>
    <% end %>
</table>
  <%= paginate @comments %>
